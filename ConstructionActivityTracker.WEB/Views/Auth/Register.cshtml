@{
    Layout = null; 
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Kayıt Ol</title>

    <!-- Global stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/global_assets/css/icons/icomoon/styles.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/css/all.min.css")" rel="stylesheet" type="text/css" />
    <!-- /global stylesheets -->
    <!-- Core JS files -->
    <script src="@Url.Content("~/global_assets/js/main/jquery.min.js")"></script>
    <script src="@Url.Content("~/global_assets/js/main/bootstrap.bundle.min.js")"></script>
    <!-- /core JS files -->
    <!-- Theme JS files -->
    <script src="@Url.Content("~/assets/js/app.js")"></script>
    <!-- /theme JS files -->

    <style>
        body {
            background: url('@Url.Content("~/global_assets/images/talan.jpg")') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            margin: 0;
            font-family: 'Roboto', sans-serif;
        }
        .login-form {
            max-width: 400px;
            margin: auto;
            background: rgba(255, 255, 255, 0.85);
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

            .login-form .card {
                background: transparent;
                border: none;
            }

            .login-form .card-body {
                padding: 0;
            }
    </style>
</head>
<body>
    <!-- Page content -->
    <div class="page-content">
        <!-- Main content -->
        <div class="content-wrapper">
            <!-- Inner content -->
            <div class="content-inner">
                <!-- Content area -->
                <div class="content d-flex justify-content-center align-items-center" style="min-height: 100vh;">
                    <!-- Register card -->
                    <form id="registerForm" class="login-form">
                        <div class="card mb-0">
                            <div class="card-body">
                                <div class="text-center mb-3">
                                    <img src="@Url.Content("~/global_assets/images/ronesans_holding.png")" alt="Logo" class="img-fluid" />
                                    <h5 class="mb-0">Yeni Hesap Oluştur</h5>
                                    <span class="d-block text-muted">Bilgilerinizi doldurun</span>
                                </div>

                                <div class="form-group">
                                    <input type="email" class="form-control" id="email" placeholder="Email" required />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="firstName" placeholder="Ad" required />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="lastName" placeholder="Soyad" required />
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" id="password" placeholder="Şifre" required />
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
                                </div>

                                <div id="registerError" class="alert alert-danger d-none" role="alert"></div>

                                <div class="form-group text-center text-muted content-divider">
                                    <span class="px-2">Zaten hesabınız var mı?</span>
                                </div>

                                <div class="form-group">
                                    <a href="@Url.Content("~/Auth/Login")" class="btn btn-light btn-block">Giriş Yap</a>
                                </div>

                                <span class="form-text text-center text-muted">
                                    Kayıt olarak <a href="#">Şartlar &amp; Koşullar</a> ve <a href="#">Çerez Politikası</a>'nı kabul etmiş olursunuz.
                                </span>
                            </div>
                        </div>
                    </form>
                    <!-- /register card -->
                </div>
                <!-- /content area -->
            </div>
            <!-- /inner content -->
        </div>
        <!-- /main content -->
    </div>
    <!-- /page content -->
    <!-- Register JS -->
    <script src="@Url.Content("~/js/register.js")"></script>
</body>
</html>

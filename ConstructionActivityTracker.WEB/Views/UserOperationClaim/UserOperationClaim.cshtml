@{
    ViewBag.Title = "Kullanıcı İşlem Yetkileri";
    ViewBag.PageTitle = "Kullanıcı İşlem Yetkileri";
    ViewBag.PageSubtitle = "Kullanıcıların Yetkilerini Yönet";
    ViewBag.Breadcrumb = "Kullanıcı İşlem Yetkileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
            <strong>Bilgilendirme:</strong> Bu sayfada kullanıcı yetkilendirmelerini yönetebilirsiniz.
        </div>
        <div id="gridToolbar" class="mb-3"></div>
        <div id="userOperationClaimsGrid"></div>
    </div>
</div>

<div class="modal fade" id="userOperationClaimModal" tabindex="-1" role="dialog" aria-labelledby="userOperationClaimModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userOperationClaimModalLabel">Yetki İşlemi</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="userOperationClaimForm">
                    <div class="form-group">
                        <label for="userId">Kullanıcı</label>
                        <select class="form-control" id="userId" name="UserId" required></select>
                    </div>
                    <div class="form-group">
                        <label for="operationClaimId">Yetki</label>
                        <select class="form-control" id="operationClaimId" name="OperationClaimId" required></select>
                    </div>
                    <input type="hidden" id="userOperationClaimId" name="Id" value="0" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="btnSave">Kaydet</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/globalToolbar.js"></script>
    <script src="~/js/userOperationClaim.js"></script>
}
